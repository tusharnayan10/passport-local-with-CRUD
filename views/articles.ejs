        .footer {
           left: 0;
           bottom: 0;
           width: 100%;
           background-color: #7f16af;
           color: white;
           text-align: center;
        }
        </style>
</head>

<body>
    <div class="container">
        <div class="jumbotron" style="padding: 2%;">
            <h1>CRUD APPLICATION USING (POST,GET,PUT,PATCH,DELETE) DEMO.</h1>
            <hr> <hr>
        </div>
        <form action="/article" method="GET">
            <button class="btn btn-primary btn-lg btn-block">GET REQUEST DEMO </button>

            <div class="alert alert-primary" role="alert">
                <% founds.forEach(function(article){ %>
                    <h1>
                        <%= article.title %>
                    </h1>
                    <p>
                        <%= article.content %>
                    </p>

                    <% }); %>
            </div>
        </form>
        <br> <hr> <br>

        <form action="/articlesPost" method="POST">
            <button class="btn btn-primary btn-lg btn-block">POST REQUEST DEMO </button>

            <div class="alert alert-primary" role="alert">
                <div class="form-group">
                    <label for="InputEmail">Article Title</label>
                    <input type="test" class="form-control"  name="title" placeholder="Enter title">
                  </div>
                  <div class="form-group">
                    <label for="InputPassword">Article Content</label>
                    <input type="text" class="form-control" name="content" placeholder="Enter content">
                  </div>
                <button type="submit" class="btn  btn-lg active btn-primary">POST REQUEST CLICK ME</button>

            </div>
        </form>

        <br> <hr> <br>


        <form action="/articlesDelete" method="GET">
            <button class="btn btn-primary btn-lg btn-block">DELETE REQUEST DEMO</button>

            <div class="alert alert-primary" role="alert">
                
                <button type="submit" class="btn  btn-lg active btn-primary">DELETE REQUEST CLICK ME</button>

            </div>
        </form>

    <br> <hr> <br>

    <form action="/articlesPUT" method="POST">
        <button class="btn btn-primary btn-lg btn-block">UPDATE (PUT) METHOD DEMO</button>

        <div class="alert alert-primary" role="alert">
            <div class="form-group">
                <label for="InputEmail">Article Title Prev </label>
                <input type="test" class="form-control"  name="titleold" placeholder="Enter title">
              </div>
              <div class="form-group">
                <label for="InputEmail">Article Title Update </label>
                <input type="test" class="form-control"  name="title" placeholder="Enter title">
              </div>
              <div class="form-group">
                <label for="InputPassword">Article Content</label>
                <input type="text" class="form-control" name="content" placeholder="Enter content">
              </div>
            <button type="submit" class="btn  btn-lg active btn-primary">UPDATE (PUT) REQUEST CLICK ME</button>

        </div>
    </form>
</div>
